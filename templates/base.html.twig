    {{ include('main/sidebar.html.twig') }}
{% endblock %}
<div class="content flex-1 min-h-screen">
    {% block search %}
       {{ include('main/search.html.twig')}}
    {% endblock %}
    {% block body %}{% endblock %}
</div>
</body>
</html>
