{% macro getSvg(svgName, svgClassName) %}
    {% set svg = '' %}

    {% if svgName == 'plus-file' %}
        {% set svg = _self.getPlusFile() %}
    {% elseif svgName == 'plus-folder' %}
        {% set svg = _self.getPlusFolder() %}
    {% elseif svgName == 'caret-down' %}
        {% set svg = _self.getCaretDown() %}
    {% elseif svgName == 'caret-up' %}
        {% set svg = _self.getCaretUp() %}
    {% elseif svgName == 'caret-updown' %}
        {% set svg = _self.getCaretUpDown() %}
    {% elseif svgName == 'ellipsis-horizontal' %}
        {% set svg = _self.getHorizontalEllipsis() %}
    {% elseif svgName == 'exclamation-triangle' %}
        {% set svg = _self.getExclamationTriangle() %}
    {% endif %}

    {% if svg != '' %}
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" stroke-width="1.5" class="{{ svgClassName }}"
             viewBox="0 0 24 24"
             stroke="currentColor">
            {{ svg }}
        </svg>
    {% endif %}
{% endmacro %}

