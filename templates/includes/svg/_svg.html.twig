{% macro getSvg(svgName, svgClassName) %}
    {% set svg = '' %}

    {% if svgName == 'plus-file' %}
        {% set svg = _self.getPlusFileSVG() %}
    {% elseif svgName == 'plus-folder' %}
        {% set svg = _self.getPlusFolderSVG() %}
    {% endif %}

    {% if svg != '' %}
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" stroke-width="1.5" class="{{svgClassName}}" viewBox="0 0 24 24"
             stroke="currentColor">
            {{ svg }}
        </svg>
    {% endif %}
{% endmacro %}

